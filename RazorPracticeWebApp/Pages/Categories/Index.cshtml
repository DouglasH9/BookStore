@page
@model RazorPracticeWebApp.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">Add Category</a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.Categories)
            {
                <tr>
                    <td width="50%">@cat.Name</td>
                    <td width="30%">@cat.DisplayOrder</td>
                    <td>
                        <div class="d-flex">
                            <a asp-page="Edit" asp-route-id="@cat.Id" class="btn btn-outline-warning">Edit</a>
                            <a asp-page="Delete" asp-route-id="@cat.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>